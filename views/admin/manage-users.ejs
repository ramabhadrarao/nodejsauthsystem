<%- include('../partials/dashboardheader', { title: 'Manage Users', role: 'admin' }) %>

<h1>Manage Users</h1>

<a href="/admin/add-user" class="btn btn-primary mb-3">Add New User</a>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.role %></td>
                <td>
                    <a href="/admin/edit-user/<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/admin/delete-user/<%= user.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/dashboardfooter') %>
